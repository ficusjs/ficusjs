{
  "name": "ficusjs-site",
  "version": "1.0.0",
  "description": "Website for FicusJS",
  "scripts": {
    "build": "cross-env NODE_ENV=production eleventy --input=src --output=dist",
    "build:js": "run-p build:js:*",
    "build:js:all": "rollup -i src/assets/js/main.mjs -o dist/assets/js/main.mjs -f es -p \"terser={mangle: { keep_fnames: true, toplevel: true, module: true }}\" -p \"filesize={}\"",
    "postbuild": "mkdirp dist/assets/js && run-s build:* copy:* workbox:gen",
    "clean": "rimraf dist",
    "copy:assets": "mkdirp dist/assets/img && ncp src/assets/img dist/assets/img",
    "copy:favicon": "ncp src/assets/img/favicon.ico dist/favicon.ico",
    "copy:apple-touch-icon": "ncp src/assets/img/apple-touch-icon.png dist/apple-touch-icon.png",
    "copy:manifest": "ncp src/ficus.webmanifest dist/ficus.webmanifest",
    "dev": "cross-env NODE_ENV=development eleventy --input=src --output=dist --serve",
    "predev": "npm run postbuild",
    "start": "npm run dev",
    "workbox:gen": "workbox generateSW workbox-config.js"
  },
  "author": "Matt Levy",
  "devDependencies": {
    "@11ty/eleventy": "1.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "4.0.0",
    "@ficusjs/components": "1.0.0-alpha.25",
    "@ficusjs/renderers": "4.4.0",
    "@ficusjs/styles": "1.0.0-alpha.31",
    "clean-css": "5.2.4",
    "concat-cli": "4.0.0",
    "cross-env": "7.0.3",
    "cssnano": "5.1.5",
    "eleventy-plugin-nesting-toc": "1.3.0",
    "ficusjs": "3.17.0",
    "html-minifier": "4.0.0",
    "markdown-it": "12.3.2",
    "markdown-it-anchor": "8.4.1",
    "markdown-it-emoji": "2.0.0",
    "markdown-it-table-of-contents": "0.6.0",
    "mkdirp": "1.0.4",
    "ncp": "2.0.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.12",
    "postcss-cli": "9.1.0",
    "rimraf": "3.0.2",
    "rollup": "2.70.1",
    "rollup-plugin-filesize": "9.1.2",
    "rollup-plugin-terser": "7.0.2",
    "slugify": "1.6.5",
    "standard": "16.0.4",
    "terser": "5.12.1",
    "workbox-cli": "6.5.2"
  }
}
